	.right-bar > .inner-content
		height leftBarThickness
		display grid
		margin 0 0rem 0 0rem
		grid-template-columns 50% repeat(5, min-content)
		@media screen and (min-width: 900px)
			margin 0 3.0rem 0 3rem
			height leftBarThicknessDesktop
			// padding 2.5rem 0
			grid-template-columns 1fr repeat(5, 64px)
	.inner-content > .inner-link
		align-self center
		text-align left
		text-transform uppercase
		font-family: alternativeFont
		margin 0 1.5rem
		font-size fontSize
		@media screen and (max-height: 400px)
			margin 0 0
		@media screen and (min-width: 601px)
			text-align right
			font-size _fontSize(1.5)
		@media screen and (min-width: 900px)
			text-align center
		@media screen and (min-width: 1500px)
			font-size _fontSize(2)
	.inner-content > .share-link
		padding 0 0.5rem
		align-self center
	.share-link svg
		width 18px
		height 18px
		@media screen and (min-width: 900px)
			width 32px
			height 32px
  .sun {
    align-self end
  }


body[data-theme="dark"] span.menu-icon > svg
	fill lightColor
	

		
body[data-theme="dark"] .right-bar {
	background darkColor;
}
body[data-theme="light"] .right-bar {
	background lightColor;
}


