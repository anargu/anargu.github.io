linksMarginAxisX = 0.5rem
linksMarginAxisXdesktop = 2.5rem

.navbar
	z-index 3
	position relative
nav
	height navbarHeightS
	vertical-align middle
	display grid
	margin 0rem 60px 0 1.5rem
	grid-template-columns repeat(2, min-content) auto min-content
	@media screen and (min-width: breakpointWidthM)
		height navbarHeightM
		margin 0 100px
	@media screen and (min-width: breakpointWidthL)
		height navbarHeightL
		margin 0 200px
	.menu-link
		position: absolute
		font-family: alternativeFont
		text-transform uppercase
		white-space nowrap
		font-style: normal
		font-weight: normal
		@media screen and (max-width: 600px)
			font-size fontSize
		@media screen and (min-width: 601px)
			font-size _fontSize(1.5)
		@media screen and (min-width: 1500px)
			font-size _fontSize(2)
	.top-left
		align-self end
		position relative
		margin 0 linksMarginAxisX
		@media screen and (min-width: 768px)
			margin 0 linksMarginAxisXdesktop
		// top topMargin
		// left leftMargin
	.top-left:first-child
		text-transform lowercase
	& > a:nth-child(3),
	.top-left:first-child
		margin 0 linksMarginAxisX 0 0
		@media screen and (min-width: 768px)
			margin 0 linksMarginAxisXdesktop 0 0
	.top-left.inactive
		display none
	.right
		right 0 
	.bottom
		left 50%
		transform translateX(-50%)
		bottom bottomMargin
	.right-bar
		position fixed
		bottom 0
		left 0
		width 100vw
		@media screen and (min-width: breakpointWidthM)
			top 100vh
			right 0
			bottom unset
			left unset
			transform rotate(90deg)
			transform-origin 100% 0
			width 100vh
