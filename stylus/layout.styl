
*
	font-family defaultFont
html,body
	margin 0
	height 100%
.page-wrapper
	margin 0rem 1.5rem 0 1.5rem
	position relative
	z-index 2
	@media screen and (min-width: 900px)
		margin 0rem leftMarginDesktop 0
	@media screen and (min-width: 1500px)
		margin 0 leftMarginDesktopXL 0
	// @media screen and (max-width: 600px)
	//   margin 4.5rem 4rem 0 1.5rem

.background-decorator
	position fixed
	top 0
	left 0
	height 100%
	width 100%
	z-index 1

.y-centered-page-wrapper
	margin 0rem 0rem 0 1.5rem
	height "calc(100% - %s)" % navbarHeightS
	display grid
	grid-template-columns auto
	align-items center
	@media screen and (min-width: breakpointWidthM)
		height "calc(100% - %s)" % navbarHeightM
		margin 0rem leftMarginDesktop
	@media screen and (min-width: breakpointWidthL)
		height "calc(100% - %s)" % navbarHeightL

.content-page-wrapper
	margin 2rem 4.8rem 0 1rem
	padding-bottom 6rem
	@media screen and (min-width: 768px)
		margin 100px auto 0
		width 660px
.content-page
	img
		width 100%

.list-flex
	&-x
		display flex
		flex-wrap nowrap
		width 100%
		overflow-x auto
		padding-bottom 1rem

.list-grid
	margin-top 2rem
	// display flex
	// flex-wrap wrap
	// width 100%
	// div
	//   flex-grow 1

	// display grid
	grid-gap 1rem 
	overflow hidden
	grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
	// grid-template-rows repeat(auto-fit, minmax(200px, 1fr))
	grid-auto-flow dense

