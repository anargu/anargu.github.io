<head prefix="og: http://ogp.me/ns#">
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />	
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="application-name" content="{{ site.title }}" />
  <meta name="apple-mobile-web-app-status-bar-style" content="#fff" />
  <meta name="apple-mobile-web-app-title" content="{{ site.title }}" />
  <title>
  {% if page.title %}
    {{ page.title | escape }} - {{ site.title }}
  {% else %}
    {{ site.title | escape }} 
  {% endif %}
  </title>
	
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" media="print" onload="this.media='all'; this.onload=null;">

  <link href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap" rel="stylesheet">

  <link
    rel="alternate"
    href="{{ site.url | url }}"
    hreflang="{{ site.lang }}"
  />
  <link
    rel="canonical"
    href="{{ site.url | url }}"
  />
  {% if paginator.previous_page %}
  <link
    rel="prev"
    href="{{
      paginator.previous_page_path
    }}"
  />
  {% endif %}
  {% if paginator.next_page %}
  <link
    rel="next"
    href="{{
      paginator.next_page_path
    }}"
  />
  {% endif %}
  <meta
    name="description"
    content="{{
      page.description
        | escape
    }}"
  />
  <meta name="referrer" content="no-referrer-when-downgrade" />
  <meta property="fb:app_id" content="{{ site.fb_appid }}" />
  <meta
    property="og:site_name"
    content="{% if page.title %}{{ page.title | escape }} | {{
      site.author.facebook
    }}{% else %}{{ site.title | escape }}{% endif %}"
  />
  <meta
    property="og:title"
    content="{% if page.title %}{{ page.title | escape }} | {{
      site.author.facebook
    }}{% else %}{{ site.title | escape }}{% endif %}"
  />
  {% if page.location %}
  <meta property="og:type" content="article" />
  <meta
    property="article:publisher"
    content="https://web.facebook.com/{{ site.author.facebook }}"
  />
  {% else %}
  <meta property="og:type" content="website" />
  {% endif %}
  <meta
    property="og:url"
    content="{{
      page.url | replace('index.html', '')  | replace('.html', '') | url
    }}"
  />
  <meta
    property="og:description"
    content="{{
      page.description
        | default(page.description, site.description) 
        | truncate(200)
        | escape
    }}"
  />
  {% if page.image %}
  <meta property="og:image" content="{{ page.image }}" />
  {% else %}
  <meta property="og:image" content="{{ site.image }}" />
  {% endif %}
  <meta property="og:image:width" content="640" />
  <meta property="og:image:height" content="640" />
  <meta name="twitter:card" content="summary" />
  <meta
    name="twitter:title"
    content="{% if page.title %}{{ page.title | escape }} | {{
      site.author.twitter
    }}{% else %}{{ site.title | escape }}{% endif %}"
  />
  <meta
    name="twitter:url"
    content="{{
      page.url  | replace('index.html', '') | replace('.html', '') | url
    }}"
  />
  <meta name="twitter:site" content="@{{ site.author.twitter }}" />
  <meta name="twitter:creator" content="@{{ site.author.twitter }}" />
  <meta
    name="twitter:description"
    content="{{
      page.description
        | default(page.description, site.description)
        | truncate(200)
        | escape
    }}"
  />
  {% if page.image %}
  <meta name="twitter:image" content="{{ page.image }}" />
  {% else %}
  <meta name="twitter:image" content="{{ site.image }}" />
  {% endif %}
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/assets/favicons/apple-icon-180x180.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/assets/favicons/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/assets/favicons/favicon-16x16.png"
  />
  <link rel="manifest" href="/assets/favicons/site.webmanifest" />
  <link
    rel="mask-icon"
    href="/assets/favicons/safari-pinned-tab.svg"
    color="#1B1D25"
  />
  <meta name="apple-mobile-web-app-title" content="anargu" />
  <meta name="application-name" content="anargu" />
  <meta name="msapplication-TileColor" content="#1B1D25" />
  <meta name="theme-color" content="#1B1D25" />

  <link rel="stylesheet" href="/css/main.css" />

  <!--
	<link rel="stylesheet" href="/css/main.css" media="print" onload="this.media='all'; this.onload=null;">
  -->
</head>

